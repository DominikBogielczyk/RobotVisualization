<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageCamera"
        android:layout_width="@dimen/cameraWidth"
        android:layout_height="@dimen/cameraHeight"
        android:clickable="true"
        android:contentDescription="@string/up"
        app:layout_constraintBottom_toTopOf="@+id/imageDown"
        app:layout_constraintEnd_toEndOf="@+id/imageDown"
        app:layout_constraintStart_toStartOf="@+id/imageDown"
        app:layout_constraintTop_toBottomOf="@+id/imageUp"
        app:layout_constraintVertical_bias="0.48"
        app:srcCompat="@drawable/camera_icon"
        app:tint="@color/blue" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/betweenMargin"
        android:height="10dp"
        android:backgroundTint="@color/blue"
        android:text="@string/clear"
        android:textSize="@dimen/textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageDown" />

    <ImageView
        android:id="@+id/imageRight"
        android:layout_width="@dimen/arrowWidth"
        android:layout_height="@dimen/arrowHeight"
        android:layout_marginEnd="@dimen/leftRightMargin"
        android:clickable="true"
        android:contentDescription="@string/right"
        app:layout_constraintBottom_toTopOf="@+id/imageDown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageUp"
        app:srcCompat="@drawable/right_icon"
        app:tint="@color/blue" />

    <ImageView
        android:id="@+id/imageLeft"
        android:layout_width="@dimen/arrowWidth"
        android:layout_height="@dimen/arrowHeight"
        android:layout_marginStart="@dimen/leftRightMargin"
        android:clickable="true"
        android:contentDescription="@string/left"
        android:rotationY="180"
        app:layout_constraintBottom_toTopOf="@+id/imageDown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageUp"
        app:srcCompat="@drawable/right_icon"
        app:tint="@color/blue" />

    <ImageView
        android:id="@+id/imageDown"
        android:layout_width="@dimen/arrowWidth"
        android:layout_height="@dimen/arrowHeight"
        android:layout_marginTop="@dimen/betweenMarginBig"
        android:clickable="true"
        android:contentDescription="@string/down"
        android:rotation="90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageUp"
        app:srcCompat="@drawable/right_icon"
        app:tint="@color/blue" />

    <ImageView
        android:id="@+id/imageUp"
        android:layout_width="@dimen/arrowWidth"
        android:layout_height="@dimen/arrowHeight"
        android:layout_marginTop="@dimen/margin"
        android:clickable="true"
        android:contentDescription="@string/up"
        android:rotation="-90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/right_icon"
        app:tint="@color/blue" />

    <Button
        android:id="@+id/buttonDisconnect"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="@dimen/betweenMargin"
        android:height="10dp"
        android:backgroundTint="@color/blue"
        android:onClick="disconnect"
        android:text="@string/disconnect"
        android:textSize="@dimen/textSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageDown" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="@dimen/textSizeBig"
        app:layout_constraintBottom_toTopOf="@+id/buttonDisconnect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonClear" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/betweenMargin"
        android:textSize="@dimen/textSizeBig"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>