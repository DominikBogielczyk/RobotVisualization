<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonRead"
        android:layout_width="@dimen/doubleButtonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:height="10dp"
        android:backgroundTint="@color/blue"
        android:onClick="readComand"
        android:text="@string/read"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageDown" />

    <ImageView
        android:id="@+id/imageRight"
        android:layout_width="@dimen/arrowWidth"
        android:layout_height="@dimen/arrowHeight"
        android:layout_marginEnd="50dp"
        android:clickable="true"
        android:contentDescription="@string/right"
        app:layout_constraintBottom_toTopOf="@+id/imageDown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageUp"
        app:srcCompat="@drawable/right_icon"
        app:tint="@color/blue" />

    <ImageView
        android:id="@+id/imageLeft"
        android:layout_width="@dimen/arrowHeight"
        android:layout_height="103dp"
        android:layout_marginStart="50dp"
        android:clickable="true"
        android:contentDescription="@string/left"
        android:rotationY="180"
        app:layout_constraintBottom_toTopOf="@+id/imageDown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageUp"
        app:srcCompat="@drawable/right_icon"
        app:tint="@color/blue" />

    <ImageView
        android:id="@+id/imageDown"
        android:layout_width="@dimen/arrowWidth"
        android:layout_height="@dimen/arrowHeight"
        android:layout_marginTop="200dp"
        android:clickable="true"
        android:contentDescription="@string/down"
        android:rotation="90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageUp"
        app:srcCompat="@drawable/right_icon"
        app:tint="@color/blue" />

    <ImageView
        android:id="@+id/imageUp"
        android:layout_width="@dimen/arrowWidth"
        android:layout_height="@dimen/arrowHeight"
        android:layout_marginTop="100dp"
        android:clickable="true"
        android:contentDescription="@string/up"
        android:rotation="-90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/right_icon"
        app:tint="@color/blue" />

    <Button
        android:id="@+id/buttonDisconnect"
        android:layout_width="@dimen/doubleButtonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="200dp"
        android:height="10dp"
        android:backgroundTint="@color/blue"
        android:onClick="disconnect"
        android:text="@string/disconnect"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageDown" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDisconnect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRead" />

</androidx.constraintlayout.widget.ConstraintLayout>