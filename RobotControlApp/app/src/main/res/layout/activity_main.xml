<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageCamera"
        android:layout_width="@dimen/cameraWidth"
        android:layout_height="@dimen/cameraHeight"
        android:clickable="true"
        android:contentDescription="@string/up"
        app:layout_constraintBottom_toTopOf="@+id/imageDown"
        app:layout_constraintEnd_toEndOf="@+id/imageDown"
        app:layout_constraintStart_toStartOf="@+id/imageDown"
        app:layout_constraintTop_toBottomOf="@+id/imageUp"
        app:layout_constraintVertical_bias="0.48"
        app:srcCompat="@drawable/camera_icon"
        app:tint="@color/blue" />

    <ImageView
        android:id="@+id/imageRight"
        android:layout_width="@dimen/arrowWidth"
        android:layout_height="@dimen/arrowHeight"
        android:layout_marginEnd="@dimen/leftRightMargin"
        android:clickable="true"
        android:contentDescription="@string/right"
        app:layout_constraintBottom_toTopOf="@+id/imageDown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageUp"
        app:srcCompat="@drawable/right_icon"
        app:tint="@color/blue" />

    <ImageView
        android:id="@+id/imageLeft"
        android:layout_width="@dimen/arrowWidth"
        android:layout_height="@dimen/arrowHeight"
        android:layout_marginStart="@dimen/leftRightMargin"
        android:clickable="true"
        android:contentDescription="@string/left"
        android:rotationY="180"
        app:layout_constraintBottom_toTopOf="@+id/imageDown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageUp"
        app:srcCompat="@drawable/right_icon"
        app:tint="@color/blue" />

    <ImageView
        android:id="@+id/imageDown"
        android:layout_width="@dimen/arrowWidth"
        android:layout_height="@dimen/arrowHeight"
        android:layout_marginTop="100dp"
        android:clickable="true"
        android:contentDescription="@string/down"
        android:rotation="90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageUp"
        app:srcCompat="@drawable/right_icon"
        app:tint="@color/blue" />

    <ImageView
        android:id="@+id/imageUp"
        android:layout_width="@dimen/arrowWidth"
        android:layout_height="@dimen/arrowHeight"
        android:layout_marginTop="@dimen/margin"
        android:clickable="true"
        android:contentDescription="@string/up"
        android:rotation="-90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/right_icon"
        app:tint="@color/blue" />

    <Button
        android:id="@+id/buttonDisconnect"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="300dp"
        android:height="10dp"
        android:backgroundTint="@color/blue"
        android:onClick="disconnect"
        android:text="@string/disconnect"
        android:textSize="@dimen/textSizeBig"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageDown" />

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="@dimen/buttonHalfWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:height="10dp"
        android:backgroundTint="@color/blue"
        android:onClick="stop"
        android:text="@string/stop"
        android:textSize="@dimen/textSizeBig"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageDown"
        app:layout_constraintEnd_toEndOf="@+id/imageCamera"
        app:layout_constraintStart_toStartOf="@+id/imageCamera"
        app:layout_constraintTop_toBottomOf="@+id/imageCamera" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="OK"
        android:textColor="@color/green"
        android:textSize="@dimen/textSizeHuge"
        app:layout_constraintBottom_toTopOf="@+id/buttonDisconnect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modeButton" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/betweenMargin"
        android:textSize="@dimen/textSizeBig"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/delayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="@dimen/textSizeBig"
        app:layout_constraintBottom_toTopOf="@+id/buttonDisconnect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ToggleButton
        android:id="@+id/modeButton"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:textOff="ωl, ωp"
        android:textOn="x, y, rot(z)"
        android:textSize="@dimen/textSizeBig"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sliderBoth" />

    <TextView
        android:id="@+id/sliderBothValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textColor="@color/blue"
        android:textSize="@dimen/textSizeHuge"
        app:layout_constraintBottom_toTopOf="@+id/sliderBoth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageDown" />

    <TextView
        android:id="@+id/sliderLeftValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="125dp"
        android:text="0.0"
        android:textColor="@color/blue"
        android:textSize="@dimen/textSizeHuge"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sliderLeft" />

    <TextView
        android:id="@+id/sliderRightValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="65dp"
        android:text="0.0"
        android:textColor="@color/blue"
        android:textSize="@dimen/textSizeHuge"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sliderLeftValue" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderBoth"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_marginTop="70dp"
        android:valueFrom="-40.0"
        android:valueTo="40.0"
        android:stepSize="0.1"
        android:value="0.0"
        app:labelBehavior="gone"
        app:tickVisible="false"
        app:trackColorActive="@color/blue"
        app:trackColorInactive="@color/grey"
        app:thumbColor="@color/blue"
        app:thumbRadius="14dp"
        app:trackHeight="12dp"
        app:haloColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageDown" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderLeft"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_marginTop="@dimen/sliderTop"
        android:layout_marginEnd="@dimen/sliderLeftRight"
        android:rotation="-90"
        android:stepSize="0.1"
        android:valueFrom="-40.0"
        android:valueTo="40.0"
        android:value="0.0"
        android:visibility="invisible"
        app:haloColor="@color/blue"
        app:labelBehavior="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:thumbColor="@color/blue"
        app:thumbRadius="14dp"
        app:tickVisible="false"
        app:trackColorActive="@color/blue"
        app:trackColorInactive="@color/grey"
        app:trackHeight="12dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderRight"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_marginStart="@dimen/sliderLeftRight"
        android:layout_marginTop="@dimen/sliderTop"
        android:rotation="-90"
        android:stepSize="0.1"
        android:valueFrom="-40.0"
        android:valueTo="40.0"
        android:value="0.0"
        android:visibility="invisible"
        app:haloColor="@color/blue"
        app:labelBehavior="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:thumbColor="@color/blue"
        app:thumbRadius="14dp"
        app:tickVisible="false"
        app:trackColorActive="@color/blue"
        app:trackColorInactive="@color/grey"
        app:trackHeight="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>